<assembly>
  <id>support</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>jboss-rails-support</directory>
      <outputDirectory>/jboss-rails-support-${pom.version}</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>Rakefile</exclude>
        <exclude>*.gemspec</exclude>
        <exclude>.git/**</exclude>
        <exclude>**/.gitignore</exclude>
        <exclude>**/*.swp</exclude>
        <exclude>pkg/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
