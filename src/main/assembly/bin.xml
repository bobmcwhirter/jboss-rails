<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>/jboss-rails-${pom.version}</outputDirectory>
      <includes>
        <include>LICENSE*.txt</include>
        <include>INSTALL.txt</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/jboss-rails-${pom.version}</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <useProjectAttachments>true</useProjectAttachments>
      <includes>
        <include>*:support:*</include>
        <include>*:deployer:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
