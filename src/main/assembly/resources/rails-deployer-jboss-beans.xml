<?xml version="1.0" encoding="UTF-8"?>

<deployment xmlns="urn:jboss:bean-deployer:2.0">

  <!-- 
     |
     | Ruby
     |
     -->

  <!-- Rack and Web --> 

  <bean name="YamlWebParsingDeployer"               class="org.jboss.ruby.enterprise.web.rack.deployers.YamlWebParsingDeployer"/>

  <bean name="RubyRackApplicationFactoryDeployer"   class="org.jboss.ruby.enterprise.web.rack.deployers.RubyRackApplicationFactoryDeployer"/>
  <bean name="RackWebApplicationDeployer"           class="org.jboss.ruby.enterprise.web.rack.deployers.RackWebApplicationDeployer"/>

  <!-- Runtime factories -->

  <bean name="RubyRuntimeFactoryDeployer"           class="org.jboss.ruby.runtime.deployers.RubyRuntimeFactoryDeployer">
    <property name="kernel"><inject bean="jboss.kernel:service=Kernel"/></property>
  </bean>
  <bean name="RubyRuntimeFactoryPublishingDeployer" class="org.jboss.ruby.runtime.deployers.RubyRuntimeFactoryPublishingDeployer"/>
  <bean name="RubyRuntimePoolDeployer"              class="org.jboss.ruby.runtime.deployers.RubyRuntimePoolDeployer"/>

  <!-- Job Scheduling -->

  <bean name="YamlScheduleParsingDeployer"          class="org.jboss.ruby.enterprise.scheduler.deployers.YamlScheduleParsingDeployer"/>
  <bean name="ScheduleDeployer"                     class="org.jboss.ruby.enterprise.scheduler.deployers.ScheduleDeployer"/>

  <!-- Endpoint Deployment  -->

<!--
  <bean name="CXFBusDeployer"                       class="org.jboss.ruby.enterprise.endpoints.cxf.deployers.CXFBusDeployer"/>
  <bean name="CXFServletDeployer"                   class="org.jboss.ruby.enterprise.endpoints.cxf.deployers.CXFServletDeployer"/>
  <bean name="RubyEndpointsIntrospectionDeployer"   class="org.jboss.ruby.enterprise.endpoints.deployers.RubyEndpointsIntrospectionDeployer"/>
  <bean name="RubyEndpointDeployer"                 class="org.jboss.ruby.enterprise.endpoints.deployers.RubyEndpointDeployer"/>
-->

  <!-- 
     |
     | Rails
     |
     -->

  <!-- RAILS_ROOT structure recognition -->
  <bean name="RailsStructure" class="org.jboss.rails.core.deployers.RailsStructure"/>

  <!-- Rack -->
  <bean name="RailsRackDeployer" class="org.jboss.rails.web.deployers.RailsRackDeployer"/>

  <!-- jboss-env.yml -->
  <bean name="RailsEnvironmentParsingDeployer" class="org.jboss.rails.core.deployers.RailsEnvironmentParsingDeployer"/>

  <!-- vendor/rails/.../version.rb -->
  <bean name="RailsVersionDeployer"            class="org.jboss.rails.core.deployers.RailsVersionDeployer"/>

  <bean name="RailsScheduleDescribeDeployer"   class="org.jboss.rails.scheduler.deployers.RailsScheduleDescribeDeployer"/>

  <bean name="RailsRootReferenceParsingDeployer" class="org.jboss.rails.core.deployers.RailsRootReferenceParsingDeployer"/>

  <bean name="RailsRubyRuntimeFactoryDescriber"  class="org.jboss.rails.runtime.deployers.RailsRubyRuntimeFactoryDescriber"/>

  <!-- Endpoint Deployment  -->
  <bean name="RailsEndpointsParsingDeployer"       class="org.jboss.rails.endpoints.deployers.RailsEndpointsParsingDeployer"/>

</deployment>
